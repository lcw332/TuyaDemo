<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开开关1"></Button>
    <Button
        android:layout_marginLeft="100dp"
        android:id="@+id/btn_open2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开开关2"></Button>

        <Button
            android:layout_marginLeft="200dp"
            android:id="@+id/btn_open3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开开关3"></Button>
    </RelativeLayout>


    <Button
        android:id="@+id/btn_get_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取验证码"></Button>

    <EditText
        android:id="@+id/et_user"
        android:hint="user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>
    <EditText
        android:id="@+id/et_pwd"
        android:hint="pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>
    <EditText
        android:id="@+id/et_code"
        android:hint="code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册账号"></Button>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录账号"></Button>
    <EditText
        android:id="@+id/et_wifi_name"
        android:hint="WIFI Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>
    <EditText
        android:id="@+id/et_wifi_pwd"
        android:hint="WIFI Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <Button
        android:id="@+id/btn_connect_token"
        android:text="获取入网token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>
    <Button
        android:id="@+id/btn_connect"
        android:text="设备入网"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>
    <Button
        android:id="@+id/btn_add_home"
        android:text="添加家庭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>

</LinearLayout>